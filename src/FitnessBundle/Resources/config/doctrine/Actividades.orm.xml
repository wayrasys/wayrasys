<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="FitnessBundle\Entity\Actividades" table="actividades">
    <indexes>
      <index name="fk_institucion_has_actividad_actividad1_idx" columns="actividad_id"/>
      <index name="fk_institucion_has_actividad_institucion1_idx" columns="institucion_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="horario" type="text" column="horario" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">JSon del horario (para visualizacion)</option>
      </options>
    </field>
    <field name="precio" type="float" column="precio" precision="6" scale="2" nullable="true"/>
    <many-to-one field="actividad" target-entity="Actividad" fetch="LAZY">
      <join-columns>
        <join-column name="actividad_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="institucion" target-entity="Institucion" fetch="LAZY">
      <join-columns>
        <join-column name="institucion_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
